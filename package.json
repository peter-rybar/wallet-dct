{
  "name": "wallet-dct",
  "version": "0.1.0",
  "description": "Wallet for DCT blockchain network",
  "keywords": [
    "wallet",
    "DCT",
    "crypto",
    "PWA"
  ],
  "author": {
    "name": "Peter Rybar",
    "email": "pr.rybar@gmail.com",
    "url": "http://prest-tech.appspot.com/peter-rybar"
  },
  "private": false,
  "license": "GPL-3.0",
  "scripts": {
    "tslint": "tslint --project tsconfig.json",
    "build": "tsc",
    "build:watch": "npm run build -- -w",
    "test": "node ./node_modules/karma-cli/bin/karma start ./karma.conf.js --single-run",
    "test:watch": "node ./node_modules/karma-cli/bin/karma start ./karma.conf.js",
    "rollup": "rollup -c",
    "rollup-multiple": "rollup-multiple -c",
    "bundle": "npm run rollup-multiple",
    "bundle:watch": "npm run rollup-multiple -- -w",
    "workbox": "workbox",
    "swim": "workbox inject:manifest",
    "swim:watch": "onchange 'dist/sw.js' -v -- npm run swim",
    "static": "cpx 'src/static/**/*.*' 'dist/' -u -v",
    "static:watch": "npm run static -- -w",
    "clean": "rimraf build/; rimraf dist/",
    "clean:all": "npm run clean; rimraf node_modules",
    "predist": "run-s clean tslint build test",
    "dist": "run-s bundle swim static",
    "dist:watch": "run-p -r static:watch bundle:watch",
    "server": "http-server dist/",
    "start": "run-p -r static:watch bundle:watch server",
    "gh-pages:dist": "cpx './dist/**/!(*.map)' 'gh-pages/' -u -v",
    "gh-pages:deploy": "git subtree push --prefix gh-pages origin gh-pages",
    "gh-pages:undeploy": "git push origin --delete gh-pages; git branch -D gh-pages",
    "deploy": "npm run gh-pages:undeploy; git checkout -b gh-pages && run-s dist gh-pages:dist && git add gh-pages && git commit -m gh-pages && npm run gh-pages:deploy && git checkout master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peter-rybar/wallet-dct.git"
  },
  "pre-commit": [
    "build",
    "dist"
  ],
  "pre-push": [
    "build",
    "dist"
  ],
  "devDependencies": {
    "@types/assertion-error": "^1.0.30",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.33",
    "@types/storejs": "^2.0.1",
    "chai": "^3.5.0",
    "cpx": "^1.5.0",
    "http-server": "^0.10.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-requirejs": "^1.1.0",
    "mocha": "^3.1.2",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.2.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "requirejs": "^2.3.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.36.3",
    "rollup-multiple": "^0.41.6",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "tslint": "^5.8.0",
    "typescript": "2.3.x",
    "workbox-cli": "^2.1.1"
  },
  "dependencies": {
    "@types/google.visualization": "0.0.41",
    "dcorejs": "0.0.1-security",
    "incremental-dom": "^0.5.1",
    "storejs": "^1.0.16",
    "workbox-sw": "2.1.2"
  },
  "prettier": {
    "tabWidth": 4
  }
}
